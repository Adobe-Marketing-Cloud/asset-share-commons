<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Downloads Panel Modal"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[asset-share-commons.author.dialog.legacy]"
    helpPath="https://adobe-marketing-cloud.github.io/asset-share-commons/pages/actions/download/">
    <content
        granite:class="asset-share-commons__dialog--legacy-support"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maxmized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <tab-1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Labels"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <modal-title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Download"
                                        fieldLabel="Modal Title"
                                        name="./modalTitle"
                                        required="{Boolean}true"/>
                                    <asset-list-title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Assets"
                                        fieldLabel="Asset List Title"
                                        name="./assetListTitle"
                                        required="{Boolean}true"/>
                                    <file-size
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="File Size"
                                        fieldLabel="File Size Label"
                                        name="./fileSize"
                                        required="{Boolean}true"/>
                                    <assets-count
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Total Assets Count"
                                        fieldLabel="Asset Count Label"
                                        name="./assetsCount"
                                        required="{Boolean}true"/>
                                    <status
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Status"
                                        fieldLabel="Status Label"
                                        name="./status"
                                        required="{Boolean}true"/>
                                    <clear
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Clear"
                                        fieldLabel="Clear Label"
                                        name="./clear"
                                        required="{Boolean}true"/>
                                    <progress
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Progress"
                                        fieldLabel="Progress Label"
                                        name="./progress"
                                        required="{Boolean}true"/>
                                    <no-content
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Sorry, could not find any downloadable files "
                                        fieldLabel="No Content Message"
                                        name="./noContentMessage"
                                        required="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </tab-1>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
